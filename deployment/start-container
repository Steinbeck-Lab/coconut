#!/bin/bash
set -e

echo "Starting Laravel application with FrankenPHP..."

# Wait for database
if [ -n "$DB_HOST" ]; then
    echo "Waiting for database..."
    until nc -z "$DB_HOST" "${DB_PORT:-5432}"; do
        echo "Database is unavailable - sleeping"
        sleep 1
    done
    echo "Database is up!"
fi

# Laravel optimizations
php artisan config:cache
php artisan route:cache
php artisan view:cache

# Run migrations if requested
if [ "$RUN_MIGRATIONS" = "true" ]; then
    php artisan migrate --force
fi

# Choose supervisor configuration based on mode
if [ "$RUN_WORKER" = "true" ]; then
    echo "Starting in worker mode (Horizon + Scheduler)..."
    exec /usr/bin/supervisord -c /etc/supervisor/conf.d/supervisord-worker.conf
else
    echo "Starting in web mode (FrankenPHP + Scheduler + Queue)..."
    exec /usr/bin/supervisord -c /etc/supervisor/conf.d/supervisord.conf
fi 